# Copy this file to .env.local for local development
# Copy this file to .env.production for production deployment

# Environment (local or production)
ENVIRONMENT=local
DEBUG=True

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///./local.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/practicepitch_prod

# Email Settings
EMAIL_BACKEND=console
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@practicepitch.local

# Zoom API (get these from Zoom Marketplace)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# Security (generate a secure secret key for production)
SECRET_KEY=dev-secret-key-change-in-production

# Allowed hosts for production (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com 